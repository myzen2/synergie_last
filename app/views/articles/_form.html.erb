<%= form_for @article do |f| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "erreur") %> empêche(nt) cet article d'être sauvegardé :
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :titre %><br>
    <%= f.text_field :titre, :class => "form-control", :rows => "1" %>
  </p>
  <p>
    <%= f.label :image %><br>
    <%= f.file_field :image, as: :file %>
  </p>
  <p>
    <%= f.label :contenu %><br>
    <%= f.text_area :contenu, :class => 'form-control', :rows => "40", :cols => '10' %>
  </p>


  <p>
    <%= f.submit :class => "btn btn-primary" %>
  </p>


<% end %>
